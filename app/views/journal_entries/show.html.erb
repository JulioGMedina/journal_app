<h2> <%= @entry.user.username %> wrote </h2>
<p>
  <%= @entry.content %>
</p>

<div>
  <h3> Comments </h3>
  <% @entry.comments.each do |comment| %>
    <div>
      <p>
        <%= comment.user.username %> said...
      </p>
      <p>
        <%= comment.body %>
      </p>
    </div>
    <div>
      <% if comment.user == current_user %>
        <%= link_to 'Edit comment', edit_comment_path(comment) %>
        <%= link_to 'Deleet comment', comment_path(comment), method: :delete %>
      <% end %>
    </div>
  <% end %>
</div>
<div>
  <h3> Leave a comment </h3>
  <%= render 'user_journal_entries/comment_form', entry: @entry %>

</div>

<div>
  <%= link_to 'View other journal entries', user_journal_entries_path(@entry.user) %>
  <% if current_user == @entry.user %>
    <%= link_to 'Edit journal entry', edit_user_journal_entry_path(current_user, @entry) %>
    <%= link_to 'Delete journal entry', user_journal_entry_path(current_user, @entry), method: :delete %>
  <% end %>
</div>

